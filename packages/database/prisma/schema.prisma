// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

model User {
  id             String          @id @default(cuid())
  name           String
  email          String
  password       String
  role           ROLE
  createdAt      DateTime        @default(now())
  contestMembers ContestMember[]
}

enum ROLE {
  user
  admin
}

model Contest {
  id          String          @id @default(cuid())
  title       String
  description String
  createdBy   String
  createdAt   DateTime        @default(now())
  questions   Question[]
  live        LiveContest?
  members     ContestMember[]
}

model LiveContest {
  id           String         @id @default(cuid())
  contestId    String         @unique
  currentIndex Int            @default(0)
  startedAt    DateTime       @default(now())
  endedAt      DateTime
  contest      Contest        @relation(fields: [contestId], references: [id])
  responses    LiveResponse[]
}

model Question {
  id        String   @id @default(cuid())
  contestId String
  text      String
  options   String[]
  correct   Int
  points    Int      @default(10)
  contest   Contest  @relation(fields: [contestId], references: [id])
}

model LiveResponse {
  id            String      @id @default(cuid())
  liveContestId String
  userId        String
  questionIndex Int
  selected      Int
  isCorrect     Boolean
  answeredAt    DateTime    @default(now())
  liveContest   LiveContest @relation(fields: [liveContestId], references: [id])
  @@unique([liveContestId, userId, questionIndex])
}

model ContestMember {
  id        String      @id @default(cuid())
  userId    String
  contestId String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  contest   Contest     @relation(fields: [contestId], references: [id], onDelete: Cascade)
  role      ContestRole
  @@unique([userId, contestId])
}

enum ContestRole {
  HOST
  PARTICIPANT
}
